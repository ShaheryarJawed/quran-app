<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Vault - DeenSphere</title>
    <link rel="stylesheet" href="style.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <script src="shared_auth.js"></script>
</head>

<body style="background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%); min-height: 100vh;">

    <!-- TOP NAVIGATION -->
    <nav class="portal-nav">
        <div class="portal-container nav-flex">
            <!-- Brand -->
            <div class="nav-brand-portal">
                <i class='bx bxs-moon pulse-icon'></i>
                <span>DeenSphere <span style="font-weight:300; opacity:0.7;">Pro</span></span>
            </div>

            <!-- Links -->
            <div class="nav-links-portal">
                <a href="index.html" class="p-link">Dashboard</a>
                <a href="quran.html" class="p-link">Quran</a>
                <a href="hadith.html" class="p-link">Hadith</a>
                <a href="seerah.html" class="p-link">Seerah</a>
                <a href="tasbih.html" class="p-link">Tasbih</a>
                <a href="duas.html" class="p-link">Duas</a>
            </div>

            <!-- Profile/Actions -->
            <div id="header-actions-container" class="nav-actions-portal">
                <div id="auth-container">
                    <button id="btn-signin" class="btn-portal-secondary"
                        style="color:white; border-color:rgba(255,255,255,0.3); padding:0.4rem 1.2rem; font-size:0.9rem;">
                        Sign In
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <main style="max-width: 1000px; margin: 2rem auto; padding: 0 2rem;">

        <!-- STREAK SECTION -->
        <section class="vault-full-section">
            <div class="section-header">
                <h3><i class='bx bxs-flame'></i> Your Streak</h3>
            </div>
            <div class="vault-streak-hero">
                <i class='bx bxs-flame'
                    style="font-size: 5rem; color: #fbbf24; filter: drop-shadow(0 0 20px rgba(251,191,36,0.5));"></i>
                <div>
                    <div style="font-size: 4rem; font-weight: 900; color: white; line-height: 1;"
                        id="vault-page-streak">0</div>
                    <div style="font-size: 1.2rem; color: #94a3b8; margin-top: 0.5rem;">Consecutive Days</div>
                    <div style="font-size: 0.9rem; color: #64748b; margin-top: 0.5rem; font-style: italic;">
                        Keep reading daily to maintain your streak! ðŸ”¥
                    </div>
                </div>
            </div>
        </section>

        <!-- FAVORITES SECTION -->
        <section class="vault-full-section">
            <div class="section-header">
                <h3><i class='bx bxs-heart'></i> Recent Favorites</h3>
                <span id="fav-count-badge" class="count-badge">0 items</span>
            </div>
            <div id="vault-full-favorites" class="favorites-grid">
                <div style="text-align: center; padding: 3rem; color: #64748b;">
                    No favorites yet. Start liking ayahs to see them here!
                </div>
            </div>
        </section>

        <!-- GOALS SECTION -->
        <section class="vault-full-section">
            <div class="section-header">
                <h3><i class='bx bxs-target-lock'></i> Your Goals</h3>
            </div>

            <div class="goals-container">
                <!-- Goal 1: Surah Mulk -->
                <div class="goal-card">
                    <div class="goal-icon">
                        <i class='bx bxs-book-bookmark'></i>
                    </div>
                    <div class="goal-content">
                        <h4>Read Surah Al-Mulk</h4>
                        <p>Recommended to recite before sleep</p>
                        <div class="goal-progress-container">
                            <div class="goal-progress-header">
                                <span class="goal-status" id="goal-mulk-status">Not Started</span>
                                <span class="goal-percentage" id="goal-mulk-pct-page">0%</span>
                            </div>
                            <div class="goal-progress-bg">
                                <div id="goal-mulk-bar-page" class="goal-progress-fill" style="width: 0%;"></div>
                            </div>
                            <div class="goal-desc" id="goal-mulk-desc">Start reading to track your progress</div>
                        </div>
                    </div>
                </div>

                <!-- Goal 2: Daily Reading -->
                <div class="goal-card">
                    <div class="goal-icon" style="background: linear-gradient(135deg, #10b981, #059669);">
                        <i class='bx bxs-time'></i>
                    </div>
                    <div class="goal-content">
                        <h4>Daily Ayah Goal</h4>
                        <p>Read at least 10 ayahs every day</p>
                        <div class="goal-progress-container">
                            <div class="goal-progress-header">
                                <span class="goal-status" id="goal-daily-status">In Progress</span>
                                <span class="goal-percentage" id="goal-daily-pct-page">0%</span>
                            </div>
                            <div class="goal-progress-bg">
                                <div id="goal-daily-bar-page" class="goal-progress-fill"
                                    style="width: 0%; background: linear-gradient(to right, #10b981, #059669);"></div>
                            </div>
                            <div class="goal-desc" id="goal-daily-desc">0 / 10 Ayahs read today</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    </main>

    <style>
        .vault-full-section {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.05);
        }

        .section-header h3 {
            margin: 0;
            color: white;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .count-badge {
            background: rgba(251, 191, 36, 0.1);
            color: #fbbf24;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
        }

        .vault-streak-hero {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 2rem;
            padding: 2rem;
            text-align: center;
        }

        .favorites-grid {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .fav-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 1.5rem;
            cursor: pointer;
            transition: all 0.3s;
        }

        .fav-card:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(251, 191, 36, 0.3);
            transform: translateY(-2px);
        }

        .fav-ref {
            color: #fbbf24;
            font-weight: 700;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .fav-text {
            color: #cbd5e1;
            line-height: 1.6;
            font-size: 1rem;
        }

        .goals-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .goal-card {
            background: rgba(255, 255, 255, 0.02);
            border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 1.5rem;
            display: flex;
            gap: 1rem;
        }

        .goal-icon {
            width: 60px;
            height: 60px;
            background: linear-gradient(135deg, #fbbf24, #f59e0b);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            color: white;
            flex-shrink: 0;
        }

        .goal-content {
            flex: 1;
        }

        .goal-content h4 {
            margin: 0 0 0.3rem 0;
            color: white;
            font-size: 1.1rem;
        }

        .goal-content p {
            margin: 0 0 1rem 0;
            color: #94a3b8;
            font-size: 0.85rem;
        }

        .goal-progress-container {
            margin-top: 1rem;
        }

        .goal-progress-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 0.5rem;
        }

        .goal-status {
            font-size: 0.85rem;
            color: #cbd5e1;
            font-weight: 500;
        }

        .goal-percentage {
            font-size: 1rem;
            color: white;
            font-weight: 700;
        }

        .goal-progress-bg {
            height: 10px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }

        .goal-progress-fill {
            height: 100%;
            background: linear-gradient(to right, #fbbf24, #f59e0b);
            border-radius: 5px;
            transition: width 0.8s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .goal-desc {
            font-size: 0.8rem;
            color: #64748b;
            margin-top: 0.5rem;
            font-style: italic;
        }

        @media (max-width: 768px) {
            .vault-streak-hero {
                flex-direction: column;
            }

            .goals-container {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            renderVaultPage();
        });

        function renderVaultPage() {
            // 1. Streak
            const streakData = JSON.parse(localStorage.getItem('user_streak') || '{"count": 0}');
            document.getElementById('vault-page-streak').textContent = streakData.count;

            // 2. Favorites
            const favorites = JSON.parse(localStorage.getItem('user_favorites') || '[]');
            const favContainer = document.getElementById('vault-full-favorites');
            const countBadge = document.getElementById('fav-count-badge');

            countBadge.textContent = `${favorites.length} item${favorites.length !== 1 ? 's' : ''}`;

            if (favorites.length === 0) {
                favContainer.innerHTML = `
                    <div style="text-align: center; padding: 3rem; color: #64748b;">
                        <i class='bx bxs-heart' style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem;"></i>
                        <p>No favorites yet. Start liking ayahs to see them here!</p>
                    </div>
                `;
            } else {
                favContainer.innerHTML = favorites.slice().reverse().map(fav => `
                    <div class="fav-card" onclick="window.location.href='quran.html?surah=${fav.surahId}&ayah=${fav.ayahNum}'">
                        <span class="fav-ref">${fav.surahName} ${fav.surahId}:${fav.ayahNum}</span>
                        <div class="fav-text">${fav.text}</div>
                    </div>
                `).join('');
            }

            // 3. Goals
            renderGoals();
        }

        function renderGoals() {
            // A. Surah Mulk Goal
            const lastRead = JSON.parse(localStorage.getItem('user_last_read'));
            let mulkProgress = 0;
            let mulkStatus = "Not Started";
            let mulkDesc = "Start reading to track your progress";

            if (lastRead && parseInt(lastRead.surahId) === 67) {
                mulkProgress = lastRead.progress || 0;
                mulkStatus = mulkProgress === 100 ? "Completed" : "In Progress";
                mulkDesc = mulkProgress === 100 ?
                    "Goal Accomplished! ðŸŽ‰ Keep up the good habit!" :
                    `Currently at Ayah ${lastRead.ayahNum} of 30`;
            }

            document.getElementById('goal-mulk-pct-page').textContent = `${mulkProgress}%`;
            document.getElementById('goal-mulk-bar-page').style.width = `${mulkProgress}%`;
            document.getElementById('goal-mulk-status').textContent = mulkStatus;
            document.getElementById('goal-mulk-desc').textContent = mulkDesc;

            // B. Daily Goal
            const today = new Date().toISOString().split('T')[0];
            const dailyStats = JSON.parse(localStorage.getItem('user_daily_stats') || '{}');
            const count = dailyStats[today] || 0;
            const goal = 10;
            const dailyProgress = Math.min(100, Math.round((count / goal) * 100));
            const dailyStatus = count >= goal ? "Completed" : "In Progress";

            document.getElementById('goal-daily-pct-page').textContent = `${dailyProgress}%`;
            document.getElementById('goal-daily-bar-page').style.width = `${dailyProgress}%`;
            document.getElementById('goal-daily-status').textContent = dailyStatus;
            document.getElementById('goal-daily-desc').textContent = count >= goal ?
                `Goal Achieved! You read ${count} ayahs today! ðŸŽ¯` :
                `${count} / ${goal} Ayahs read today`;
        }
    </script>

</body>

</html>